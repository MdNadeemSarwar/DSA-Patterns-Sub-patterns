// Binary search lagane keleye array sorted hona chahiye yaha pe array 2 part me divided hai isleye hame 1 cheg dekhna hoga yato uska left side sorted hoga ya right side
// agar array ka start chota ya barabar hai mid se to iska matlab left side sorted hai nahi to right side hoga sorted
// ab ye dekhenge ki agar tera value target se chota hai ya target ke barabar hai ya value mid se chota hai ya mid ke barabar hai to left side me melega isleye 
taraget nums[start] <= target && target < nums[mid] to end = mid - 1 karo nahi to right side me jaoo start = mid+1

class Solution {
public:
    int search(vector<int>& nums, int target) {
        int n = nums.size();
        int start = 0;
        int end = n-1;

        while(start <= end){
           int mid  = start + (end - start)/2;
           if(nums[mid] == target){
            return mid;
           }
           if(nums[start] <= nums[mid]){
                if(nums[start] <= target && target < nums[mid]){
                    end = mid - 1;
                }
                else{
                    start = mid +1;
                }
           }
           else{
            if(nums[mid] <= target && target <= nums[end]){
                start = mid + 1;
            }
            else{
                end = mid - 1;
            }
           }
        }
        return -1;
    }
};
