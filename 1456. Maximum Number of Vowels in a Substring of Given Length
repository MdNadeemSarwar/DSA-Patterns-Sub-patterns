TC=> O(N)
SC=> O(1)

class Solution {
public:
    int maxVowels(string s, int k) {
        int start =0;
        int maxsum = 0;
        int windowsize = 0;
        unordered_set<char>vowel = {'a','e','i','o','u'};

        for(int i=0; i<s.size(); i++){
            char ch = s[i];
            if(vowel.count(ch)){
                windowsize++;
            }

            if(i >= k){
                if(vowel.count(s[i-k])){
                    windowsize--;
                }
            }
            maxsum = max(windowsize, maxsum);   
        }
        return maxsum;
    }
};
