
class Solution {
public:
    ListNode* reverseBetween(ListNode* head, int left, int right) {
        ListNode* newhead = new ListNode(0);
        ListNode* dummy = newhead;
        dummy->next = head;  
        ListNode* prev = dummy;

        for(int i=1; i<left; i++){
            prev = prev->next;
        }
        ListNode* curr = prev->next;
        ListNode* pre = NULL;
        ListNode* forw = NULL;

        for(int i=0; i<right - left; i++){
            forw = curr->next;
            curr->next = forw->next;
            forw->next = prev->next;
            prev->next = forw;
        }
        return dummy->next;
    }
};
