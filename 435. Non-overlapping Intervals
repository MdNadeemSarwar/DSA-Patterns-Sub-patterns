class Solution {
public:
    int eraseOverlapIntervals(vector<vector<int>>& intervals) {
        sort(intervals.begin(), intervals.end(), [](auto &a, auto &b){
            return a[1] < b[1];
        });

        int count = 0;
        int lastend = INT_MIN;

        for(auto x : intervals){
            if(x[0] >= lastend){
                count++;
                lastend = x[1];
            }
        }
        return intervals.size() - count;
    }
};
